<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login – Solar Monitoring System</title>

    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="min-h-screen bg-black text-white">

<!-- Background -->
<div class="fixed inset-0 bg-cover bg-center"
     style="background-image:url('/images/solar-bg.png');">
</div>
<div class="fixed inset-0 bg-black bg-opacity-70"></div>

<!-- Container -->
<div class="relative min-h-screen flex items-center justify-center px-4">

    <!-- Login Card -->
    <div class="w-full max-w-md bg-white/5 backdrop-blur-xl border border-white/10 rounded-2xl shadow-2xl p-8">

        <!-- Logo -->
        <div class="flex justify-center mb-6">
            <div class="w-20 h-20 rounded-xl bg-yellow-500 flex items-center justify-center shadow-lg">
                <i class="fas fa-solar-panel text-black text-3xl"></i>
            </div>
        </div>

        <!-- Title -->
        <h1 class="text-2xl font-bold text-center mb-2">
            Solar Monitoring System
        </h1>
        <p class="text-sm text-gray-400 text-center mb-8">
            Secure access to energy insights
        </p>

        <!-- Flash Messages -->
        <% if (error) { %>
        <div class="mb-4 bg-red-500/20 border border-red-500/40 text-red-300 text-sm p-3 rounded-lg">
            <i class="fas fa-exclamation-circle mr-2"></i><%= error %>
        </div>
        <% } %>

        <% if (success) { %>
        <div class="mb-4 bg-green-500/20 border border-green-500/40 text-green-300 text-sm p-3 rounded-lg">
            <i class="fas fa-check-circle mr-2"></i><%= success %>
        </div>
        <% } %>

        <!-- Form -->
        <form action="/login" method="POST" class="space-y-5">

            <!-- Email -->
            <div>
                <label class="text-sm text-gray-300">Email</label>
                <input 
                    type="email" 
                    name="email" 
                    required
                    autocomplete="email"
                    class="mt-1 w-full px-4 py-3 rounded-lg bg-black/40 border border-white/10 focus:border-yellow-500 focus:ring-yellow-500 focus:ring-1 outline-none transition-colors text-white placeholder-gray-400"
                    placeholder="you@example.com"
                    value=""
                >
            </div>

            <!-- Password -->
            <div>
                <label class="text-sm text-gray-300">Password</label>
                <div class="relative">
                    <input 
                        type="password" 
                        name="password" 
                        id="password" 
                        required
                        autocomplete="current-password"
                        class="mt-1 w-full px-4 py-3 rounded-lg bg-black/40 border border-white/10 focus:border-yellow-500 focus:ring-yellow-500 focus:ring-1 outline-none transition-colors text-white placeholder-gray-400 pr-12"
                        placeholder="••••••••"
                        value=""
                    >
                    <button 
                        type="button"
                        onclick="togglePassword()"
                        class="absolute right-3 top-3 text-gray-400 hover:text-yellow-500 p-1 rounded hover:bg-white/10"
                        tabindex="-1"
                    >
                        <i class="fas fa-eye" id="eyeIcon"></i>
                    </button>
                </div>
            </div>

            <!-- Remember Me -->
            <div class="flex items-center">
                <input 
                    type="checkbox" 
                    name="remember" 
                    id="remember"
                    class="h-4 w-4 rounded border-white/20 bg-black/40 text-yellow-500 focus:ring-yellow-500 focus:ring-offset-0"
                >
                <label for="remember" class="ml-2 text-sm text-gray-300">
                    Remember me
                </label>
            </div>

            <!-- Button -->
            <button 
                type="submit"
                class="w-full py-3 bg-yellow-500 hover:bg-yellow-600 text-black font-semibold rounded-lg transition-colors duration-200"
            >
                Sign In
            </button>

        </form>

        <!-- Footer -->
        <p class="text-xs text-gray-500 text-center mt-6">
            © <%= new Date().getFullYear() %> Solar Monitoring System
        </p>

    </div>
</div>

<script>
// Simple password toggle function
function togglePassword() {
    const passwordInput = document.getElementById('password');
    const eyeIcon = document.getElementById('eyeIcon');
    
    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        eyeIcon.classList.remove('fa-eye');
        eyeIcon.classList.add('fa-eye-slash');
    } else {
        passwordInput.type = 'password';
        eyeIcon.classList.remove('fa-eye-slash');
        eyeIcon.classList.add('fa-eye');
    }
}

// Fix input issues - ensure all inputs are fully functional
document.addEventListener('DOMContentLoaded', function() {
    // Remove any disabled attributes and ensure inputs are editable
    const allInputs = document.querySelectorAll('input');
    allInputs.forEach(input => {
        // Remove any disabled attribute
        input.removeAttribute('disabled');
        
        // Ensure input is editable
        input.style.pointerEvents = 'auto';
        input.style.userSelect = 'auto';
        input.style.webkitUserSelect = 'auto';
        
        // Add event listeners for debugging
        input.addEventListener('focus', function() {
            console.log('Input focused:', this.name);
        });
        
        input.addEventListener('input', function() {
            console.log('Input changed:', this.name, 'value:', this.value);
        });
    });
    
    // Focus on email input by default
    const emailInput = document.querySelector('input[name="email"]');
    if (emailInput) {
        setTimeout(() => {
            emailInput.focus();
        }, 100);
    }
    
    // Test if inputs are working
    console.log('Form inputs initialized');
    
    // Force enable all form elements
    const form = document.querySelector('form');
    if (form) {
        form.style.pointerEvents = 'auto';
        form.addEventListener('submit', function(e) {
            console.log('Form submitted');
        });
    }
});
</script>

</body>
</html>